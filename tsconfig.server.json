{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "dist-server",
        "rootDir": "server",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "server/**/*"
    ]
}